{
  "name": "npmscriptsarroxa",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "engines": {
    "node": "^4.2.2",
    "npm": "^2.7.0"
  },
  "scripts": {
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers '> 5%, ie 9' -r dist/css/*",
    "copy": "cp src/*.{js,css,html} dist/",
    "imagemin": "imagemin src/img/* -o dist/img",
    "lint": "eslint src/js",
    "sass": "node-sass --output-style compressed -o dist/css src/sass",
    "stop": "rm -rf node_modules",
    "uglify": "mkdir -p dist/js && uglifyjs src/js/*.js -m -o dist/js/app.js && uglifyjs src/js/*.js -m -c -o dist/js/app.min.js",
    "serve": "browser-sync start --server 'dist/' --files 'dist/css/*.css, dist/js/*.js'",
    "build:css": "npm run sass && npm run autoprefixer",
    "build:js": "npm run lint && npm run uglify",
    "build:img": "npm run imagemin",
    "build": "npm run build:css && npm run build:js && npm run build:img",
    "watch:css": "onchange 'src/sass/*.sass' -- npm run build:css",
    "watch:js": "onchange 'src/js/*.js' -- npm run build:js",
    "watch:copy": "onchange 'src/*.{js,css,html}' -- npm run copy",
    "start": "npm run build && parallelshell 'npm run serve' 'npm run watch:css' 'npm run watch:js'"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "browser-sync": "^2.18.5",
    "eslint": "^3.12.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.0.0",
    "onchange": "^3.2.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.6.0",
    "uglify-js": "^2.7.5"
  }
}
